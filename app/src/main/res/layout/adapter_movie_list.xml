<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:background="@drawable/bg_blue_stroke"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/rl_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_movie"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/icon_movies" />

        <TextView
            android:id="@+id/txt_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_movie"
            android:layout_toLeftOf="@+id/img_arrow"
            android:text="movie name"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow"
            android:tint="@color/colorPrimary"/>

        <TextView
            android:id="@+id/txt_movie_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_movie"
            android:text="movie name"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_movie_adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_movie"
            android:text="A"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
    </RelativeLayout>

</LinearLayout>